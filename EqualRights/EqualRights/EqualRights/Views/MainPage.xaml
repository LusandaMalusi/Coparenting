<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EqualRights.Views.MainPage"
             Title="{Binding Title}"
             BackgroundImage="Background.jpg">


    <StackLayout >

        <Label Text="Coparenting" 
           HorizontalOptions="Center"
           TextColor="Beige"
           FontSize="50"
           Margin="0 ,120 ,0 ,0"
           FontAttributes="Bold"/>
           

        <Button Text="Login" Command="{Binding LoginCommand}"
                FontSize="Medium"
                FontAttributes="Bold"
                Margin="30"/>



        <Button Text="Sign Up" Command="{Binding SignCommand}"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    Margin="30"/>
    </StackLayout>

</ContentPage>